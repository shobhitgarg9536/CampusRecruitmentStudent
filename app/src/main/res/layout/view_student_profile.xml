<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic Details"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textViewViewStudentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student View" />

            <TextView
                android:id="@+id/textViewViewStudentAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age" />

            <TextView
                android:id="@+id/textViewViewStudentContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Academic"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High School"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewViewStudentHPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Percent" />

            <TextView
                android:id="@+id/textViewViewStudentHYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year" />

            <TextView
                android:id="@+id/textViewViewStudentHBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Board" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Secondary School"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewViewStudentSPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Percent" />

            <TextView
                android:id="@+id/textViewViewStudentSYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year" />

            <TextView
                android:id="@+id/textViewViewStudentSBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Board" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Graduation"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewViewStudentCollege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="College" />

            <TextView
                android:id="@+id/textViewViewStudentBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Branch" />

            <TextView
                android:id="@+id/textViewViewStudentCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course" />

            <TextView
                android:id="@+id/textViewViewStudentUniversity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="University" />

            <TextView
                android:id="@+id/textViewViewStudentPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Percent" />

            <TextView
                android:id="@+id/textViewViewStudentYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year of passing" />

            <TextView
                android:id="@+id/textViewViewStudentBacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Backs" />

            <TextView
                android:id="@+id/textViewViewStudentSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>